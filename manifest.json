{
  "manifest_version": 3,
  "name": "Anatole",
  "version": "1.0",
  "description": "Informe l'utilisateur si le lien survolé est un site officiel lorsqu'il effectue une recherche pour des démarches administratives.",
  "host_permissions": [
    "https://www.google.com/*",
    "https://www.google.fr/*",
    "https://www.bing.com/*",
    "https://search.yahoo.com/*",
    "https://duckduckgo.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "homepage_url": "https://sam-anatole.github.io/anatole-privacy/privacy",
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "https://www.google.fr/*",
        "https://www.bing.com/*",
        "https://search.yahoo.com/*",
        "https://duckduckgo.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
  {
    "resources": ["welcome.html"],
    "matches": [
      "https://www.google.com/*",
      "https://www.google.fr/*",
      "https://www.bing.com/*",
      "https://search.yahoo.com/*",
      "https://duckduckgo.com/*"
    ]
  }
], 
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/logo_anatole_light.png"
  },
  "icons": {
  "16": "icons/icon-light-16.png",
  "48": "icons/icon-light-48.png",
  "128": "icons/icon-light-128.png"
}
}
